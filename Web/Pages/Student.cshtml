@page
@model Web.Pages.StudentModel
@{
    ViewData["Title"] = "Student";
}

<h2>Student</h2>

<p><a asp-page="Index">Back</a></p>

@if (Model.Student != null)
{
    <p>@Model.Student.Forename</p>
    <p>@Model.Student.Surname</p>
    <p>@Model.Student.Grade.Title</p>

    @if (Model.Student.EmailAddresses != null)
    {
        if (Model.Student.EmailAddresses.Count > 0)
        {
            foreach (var emailAddress in Model.Student.EmailAddresses)
            {
                <p>@emailAddress.EmailAddress</p>
            }
        }
    }
}
else
{
    <p>No student found!</p>
}